  <script>
    // Dados iniciais - começando com array vazio
    let courses = JSON.parse(localStorage.getItem('devrise-courses')) || [];

    // Salvar cursos no localStorage
    function saveCourses() {
      localStorage.setItem('devrise-courses', JSON.stringify(courses));
    }

    document.addEventListener('DOMContentLoaded', function() {
      const coursesGrid = document.getElementById('courses-grid');
      const noCourses = document.getElementById('no-courses');
      const searchForm = document.getElementById('search-form');
      const searchInput = document.getElementById('search-input');
      const filtersContainer = document.getElementById('filters-container');
      const purchaseModal = document.getElementById('purchase-modal');
      const closeModal = document.getElementById('close-modal');
      const modalCourseInfo = document.getElementById('modal-course-info');
      const confirmPurchase = document.getElementById('confirm-purchase');
      
      let currentFilter = 'all';
      let currentSearch = '';
      let selectedCourse = null;
      
      // Carregar cursos na página inicial
      renderCourses();
      
      // Configurar busca
      searchForm.addEventListener('submit', function(e) {
        e.preventDefault();
        currentSearch = searchInput.value.toLowerCase();
        renderCourses();
      });
      
      // Configurar filtros
      filtersContainer.addEventListener('click', function(e) {
        if (e.target.classList.contains('filter-item')) {
          document.querySelectorAll('.filter-item').forEach(item => {
            item.classList.remove('active');
          });
          
          e.target.classList.add('active');
          currentFilter = e.target.dataset.filter;
          renderCourses();
        }
      });
      
      // Fechar modal
      closeModal.addEventListener('click', function() {
        purchaseModal.style.display = 'none';
      });
      
      // Confirmar compra
      confirmPurchase.addEventListener('click', function() {
        alert('Obrigado pela compra! Envie o comprovante para kzin82666@gmail.com e em instantes você receberá o acesso ao curso.');
        purchaseModal.style.display = 'none';
        
        // Incrementar número de alunos
        if (selectedCourse) {
          const courseIndex = courses.findIndex(c => c.id === selectedCourse.id);
          if (courseIndex !== -1) {
            courses[courseIndex].students++;
            saveCourses();
            renderCourses();
          }
        }
      });
      
      // Função para renderizar cursos
      function renderCourses() {
        coursesGrid.innerHTML = '';
        
        let filteredCourses = courses;
        
        // Aplicar filtro
        if (currentFilter !== 'all') {
          if (currentFilter === 'popular') {
            filteredCourses = filteredCourses.sort((a, b) => b.students - a.students).slice(0, 3);
          } else {
            filteredCourses = filteredCourses.filter(course => course.category === currentFilter);
          }
        }
        
        // Aplicar busca
        if (currentSearch) {
          filteredCourses = filteredCourses.filter(course => 
            course.title.toLowerCase().includes(currentSearch) || 
            course.description.toLowerCase().includes(currentSearch) ||
            course.instructor.toLowerCase().includes(currentSearch)
          );
        }
        
        if (filteredCourses.length === 0) {
          coursesGrid.innerHTML = `
            <div class="no-courses">
              <i class="fas fa-search fa-3x" style="color: #3498db; margin-bottom: 20px;"></i>
              <h3>Nenhum curso encontrado</h3>
              <p>Tente ajustar os filtros ou termos de busca.</p>
              ${courses.length === 0 ? '<p>Em breve teremos cursos disponíveis!</p>' : ''}
            </div>
          `;
          return;
        }
        
        filteredCourses.forEach(course => {
          const courseElement = createCourseElement(course);
          coursesGrid.appendChild(courseElement);
        });
      }
      
      // Função para criar elemento de curso
      function createCourseElement(course) {
        const icons = {
          html: '<i class="fab fa-html5"></i>',
          js: '<i class="fab fa-js"></i>',
          react: '<i class="fab fa-react"></i>',
          node: '<i class="fab fa-node-js"></i>',
          python: '<i class="fab fa-python"></i>',
          database: '<i class="fas fa-database"></i>',
          design: '<i class="fas fa-paint-brush"></i>',
          marketing: '<i class="fas fa-chart-line"></i>',
          business: '<i class="fas fa-briefcase"></i>'
        };
        
        const courseCard = document.createElement('div');
        courseCard.className = 'course-card';
        courseCard.innerHTML = `
          <div class="course-image">
            ${icons[course.image] || '<i class="fas fa-book"></i>'}
          </div>
          <div class="course-content">
            <h3 class="course-title">${course.title}</h3>
            <p class="course-instructor">Por: ${course.instructor}</p>
            <p class="course-description">${course.description}</p>
            <p class="course-price">R$ ${course.price.toFixed(2)}</p>
            <div class="course-meta">
              <span><i class="fas fa-users"></i> ${course.students} alunos</span>
              <span><i class="fas fa-star"></i> ${course.rating}</span>
            </div>
            <button class="btn" style="width: 100%; margin-top: 15px;" data-course-id="${course.id}">Comprar Agora</button>
          </div>
        `;
        
        // Adicionar evento de compra
        const buyButton = courseCard.querySelector('button');
        buyButton.addEventListener('click', function() {
          selectedCourse = course;
          showPurchaseModal(course);
        });
        
        return courseCard;
      }
      
      // Função para mostrar modal de compra
      function showPurchaseModal(course) {
        modalCourseInfo.innerHTML = `
          <h3>${course.title}</h3>
          <p>Por: ${course.instructor}</p>
          <p><strong>Valor: R$ ${course.price.toFixed(2)}</strong></p>
        `;
        purchaseModal.style.display = 'flex';
      }
      
      // Fechar modal ao clicar fora dele
      window.addEventListener('click', function(e) {
        if (e.target === purchaseModal) {
          purchaseModal.style.display = 'none';
        }
      });
      
      // Verificar se há cursos para mostrar ou esconder a mensagem
      if (courses.length > 0) {
        noCourses.style.display = 'none';
      } else {
        noCourses.style.display = 'block';
      }
    });
  </script>
</body>
